<div class="row-fluid">
  <!-- What others say about us  -->
  <div class="about-us col-xs-12">
    <div class="container-fluid">
      <div class="row-fluid">
        <div class="col-sm-10 col-sm-offset-1">
          <h1 class="pad-h2 text-center">Welcome to MVIT A-Z</h1>
          <h2 class="text-center" style="margin-bottom: 30px;">Ask Learn Share & Grow</h2>
          <p class="text-center">
            <%= link_to 'New Event', new_event_path, class: 'mybutton spl btn-clr' %>
            <%= link_to 'Add tags', '/interests', class: 'mybutton spl btn-clr'  %>
            <%= link_to 'View All Events', events_path, class: 'mybutton spl btn-clr' %>
          </p>
          <div class="pad-bottom"></div>
        </div> 
      </div> 
    </div>
  </div>

  <div class="container content">
    <!-- Recent Works -->
    <div class="headline">
      <h2>Your Events</h2>
    </div>
    <div class="row margin-bottom-20">
      <% @events.each do |event| %>
      <div class="col-md-3 col-sm-6">
        <div class="thumbnails thumbnail-style thumbnail-kenburn">
          <div class="thumbnail-img">
            <div class="overflow-hidden">
              <%= image_tag 'camera.jpg', class: 'img-responsive' %>
            </div>
            <%= link_to 'read more +', event_path(event), class: 'btn-more hover-effect' %>            
          </div>
          <div class="caption">
            <h3><%= link_to event.name, event_path(event), class: 'hover-effect' %></h3>
            <p><%= event.description %></p>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>